@model Senai.Chamados.Web.ViewModels.Grafico.ListaGraficoViewModel
@using Senai.Chamados.Web.Helpers

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="jumbotron">
    <div class="container">
        <h1>Tela de Gráficos</h1>
        <p>Visualize todos as informações da sua operação rapidamente</p>
    </div>
</div>

    <div class="panel panel-default">
        <div class="panel-heading">Gráficos de Status</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <canvas id="pie-chart-status" width="800" height="450"></canvas>
                </div>
                <div class="col-lg-6">
                    <canvas id="bar-chart-status" width="800" height="450"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">Gráficos de Setor</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <canvas id="pie-chart-setor" width="800" height="450"></canvas>
                </div>
                <div class="col-lg-6">
                    <canvas id="bar-chart-setor" width="800" height="450"></canvas>
                </div>
            </div>
        </div>
    </div>


@section Scripts{

    <script src="~/Scripts/Chart.min.js"></script>
    <script src="~/Scripts/Chart.Util.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            @Html.GerarGraficoChartJs("bar-chart-status", 
                                      Html.Raw(Json.Encode(Model.GraficoStatus.Labels)), 
                                      Html.Raw(Json.Encode(Model.GraficoStatus.Data)),
                                      "bar", "Gráfico de Barra por Status")

            @Html.GerarGraficoChartJs("pie-chart-status",
                                      Html.Raw(Json.Encode(Model.GraficoStatus.Labels)),
                                      Html.Raw(Json.Encode(Model.GraficoStatus.Data)),
                                      "pie", "Gráfico de Pizza pos Status" )
            
            @Html.GerarGraficoChartJs("bar-chart-setor", 
                                      Html.Raw(Json.Encode(Model.GraficoSetor.Labels)), 
                                      Html.Raw(Json.Encode(Model.GraficoSetor.Data)),
                                      "bar", "Gráfico de Barra por Setor")

            @Html.GerarGraficoChartJs("pie-chart-setor",
                                      Html.Raw(Json.Encode(Model.GraficoSetor.Labels)),
                                      Html.Raw(Json.Encode(Model.GraficoSetor.Data)),
                                      "pie", "Gráfico de Pizza por setor")
        });
    </script>
}